<!-- Section para PNG com efeito esfumaçado -->
<section class="hero-png-effect section--no-padding">
  <div class="hero-png-effect__container">
    <!-- Camadas de efeito esfumaçado - Grande fumaçona -->
    <div class="hero-png-effect__smoke-layer hero-png-effect__smoke-layer--1"></div>
    <div class="hero-png-effect__smoke-layer hero-png-effect__smoke-layer--2"></div>
    <div class="hero-png-effect__smoke-layer hero-png-effect__smoke-layer--3"></div>
    <div class="hero-png-effect__smoke-layer hero-png-effect__smoke-layer--4"></div>
    <div class="hero-png-effect__smoke-layer hero-png-effect__smoke-layer--5"></div>
    <div class="hero-png-effect__smoke-layer hero-png-effect__smoke-layer--6"></div>
    
    <!-- Imagem PNG principal -->
    <div class="hero-png-effect__image-wrapper">
      <img 
        src="/assets/AGAINST.png" 
        alt="Against All Oddz" 
        class="hero-png-effect__image"
      />
    </div>
  </div>
</section>

{% stylesheet %}
  /* Remove padding/margin global da section */


  .hero-png-effect {
    position: relative;
    
    /* height: 400px; */
    background: #000000;
    overflow: visible;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    padding: 0;
    margin-top: -80px;
    margin-bottom: -80px;
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    z-index: 5;
    border: none;
    outline: none;
    box-shadow: none;
    cursor: pointer;
    transition: all 0.3s ease;
    left: 0;
    right: 0;
  }

  /* Força a section a quebrar fora do container pai */
  .hero-png-effect {
    box-sizing: border-box;
  }

  /* Remove qualquer limitação de container pai */
  .section--no-padding {
    max-width: none !important;
    width: 100% !important;
  }

  /* Garante que não há scroll horizontal */
  body {
    overflow-x: hidden;
  }


  .hero-png-effect * {
    box-sizing: border-box;
  }

  /* Força remoção de qualquer limitação de largura */
  .section--no-padding,
  .section--no-padding .hero-png-effect {
    min-width: 100vw !important;
    max-width: none !important;
  }

 
  @keyframes glowHover {
    from {
      opacity: 0.3;
      transform: scale(0.9);
    }
    to {
      opacity: 0.6;
      transform: scale(1.1);
    }
  }

  .hero-png-effect::before {
    content: '';
    position: absolute;
    top: -100px;
    left: 0;
    right: 0;
    height: 100px;
    background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.3) 30%, rgba(0,0,0,0.7) 70%, #000000 100%);
    z-index: 1;
  }

  .hero-png-effect::after {
    content: '';
    position: absolute;
    bottom: -100px;
    left: 0;
    right: 0;
    height: 100px;
    background: linear-gradient(to top, transparent 0%, rgba(0,0,0,0.3) 30%, rgba(0,0,0,0.7) 70%, #000000 100%);
    z-index: 1;
  }

  .hero-png-effect__container {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 100px;
  }

  /* Camadas de efeito esfumaçado - estilo grafite urbano */
  .hero-png-effect__smoke-layer {
    position: absolute;
    background: radial-gradient(ellipse 120% 80%, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.7) 25%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0.2) 75%, transparent 100%);
    filter: blur(30px) contrast(1.2);
    animation: graffitiSmoke 10s ease-in-out infinite;
    border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    transition: all 0.3s ease;
  }

  .hero-png-effect__smoke-layer--1 {
    width: 600px;
    height: 400px;
    top: -50%;
    left: 5%;
    animation-delay: 0s;
    --rotation: -15deg;
  }

  .hero-png-effect__smoke-layer--2 {
    width: 550px;
    height: 350px;
    top: 10%;
    right: 10%;
    animation-delay: 2s;
    --rotation: 25deg;
  }

  .hero-png-effect__smoke-layer--3 {
    width: 650px;
    height: 450px;
    bottom: -40%;
    left: 30%;
    animation-delay: 4s;
    --rotation: -30deg;
  }

  .hero-png-effect__smoke-layer--4 {
    width: 700px;
    height: 500px;
    top: -20%;
    left: -15%;
    animation-delay: 1s;
    --rotation: 45deg;
  }

  .hero-png-effect__smoke-layer--5 {
    width: 580px;
    height: 380px;
    bottom: -10%;
    right: -10%;
    animation-delay: 3s;
    --rotation: -45deg;
  }

  .hero-png-effect__smoke-layer--6 {
    width: 750px;
    height: 600px;
    top: 5%;
    left: 25%;
    animation-delay: 5s;
    --rotation: 10deg;
  }

  /* Wrapper da imagem */
  .hero-png-effect__image-wrapper {
    position: relative;
    z-index: 10;
    filter: drop-shadow(0 10px 30px rgba(0,0,0,0.5));
  }

  /* Imagem principal */
  .hero-png-effect__image {
    width: 350px;
    height: auto;
    display: block;
    position: relative;
    z-index: 2;
    bottom: 80px;
    filter: contrast(1.1) brightness(1.05);
    transition: all 0.3s ease;

  }

  /* Animação estilo grafite - movimento orgânico e irregular */
  @keyframes graffitiSmoke {
    0% {
      transform: translateY(0px) translateX(0px) scale(1) rotate(var(--rotation, 0deg));
      opacity: 0.8;
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    }
    20% {
      transform: translateY(-15px) translateX(8px) scale(1.05) rotate(calc(var(--rotation, 0deg) + 5deg));
      opacity: 0.9;
      border-radius: 40% 60% 70% 30% / 40% 70% 30% 60%;
    }
    40% {
      transform: translateY(-8px) translateX(-12px) scale(0.95) rotate(calc(var(--rotation, 0deg) - 3deg));
      opacity: 0.7;
      border-radius: 70% 30% 40% 60% / 30% 60% 40% 70%;
    }
    60% {
      transform: translateY(-20px) translateX(5px) scale(1.1) rotate(calc(var(--rotation, 0deg) + 8deg));
      opacity: 0.85;
      border-radius: 50% 50% 60% 40% / 70% 30% 50% 50%;
    }
    80% {
      transform: translateY(-12px) translateX(-8px) scale(0.98) rotate(calc(var(--rotation, 0deg) - 2deg));
      opacity: 0.75;
      border-radius: 30% 70% 50% 50% / 60% 40% 70% 30%;
    }
    100% {
      transform: translateY(0px) translateX(0px) scale(1) rotate(var(--rotation, 0deg));
      opacity: 0.8;
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    }
  }

  /* Efeito de brilho adicional */
  .hero-png-effect__image-wrapper::before {
    content: '';
    position: absolute;
    top: -30px;
    left: -30px;
    right: -30px;
    bottom: -30px;
    background: radial-gradient(circle, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.1) 40%, transparent 70%);
    border-radius: 50%;
    z-index: 1;
    animation: glow 3s ease-in-out infinite alternate;
  }

  @keyframes glow {
    from {
      opacity: 0.5;
      transform: scale(0.95);
    }
    to {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }

  /* Responsividade */
  @media screen and (max-width: 768px) {
    .hero-png-effect {
      height: 300px;
    }
    
    .hero-png-effect__image {
      width: 350px;
    }
    
    .hero-png-effect__smoke-layer {
      filter: blur(15px);
    }
    
    .hero-png-effect__smoke-layer--1 {
      width: 150px;
      height: 150px;
    }
    
    .hero-png-effect__smoke-layer--2 {
      width: 120px;
      height: 120px;
    }
    
    .hero-png-effect__smoke-layer--3 {
      width: 140px;
      height: 140px;
    }
  }
{% endstylesheet %}

